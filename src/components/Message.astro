---
interface Props {
	text: string
	author: string
}

const {text, author} = Astro.props
console.log(text.split('\n'))
---


<div class="message">
	<div class="message-texts">
	{text.split('\n').map(t => <p class="message-text">{t}</p>)}
	</div>
	<strong class="message-author">{author}</strong>
</div>


<style lang="scss">
.message {
	display: flex;
	flex-flow: column;
	place-content: start;
	gap: 1.5rem;
	padding: 0.85rem 1rem 0.95rem;
	background: var(--clr-gray-300);
	border: 2px solid var(--clr-gray-700);
	break-inside: avoid;
	margin-bottom: 1rem;
	box-shadow: 0 0 -1px 4px var(--clr-gray-800);


	&-texts{
		
		line-height: 1.5;
	}


	&-text {
	}

	&-author {
		place-self: end;
		font-weight: 700;
		font-size: var(--step-1);
		margin-left: auto;
		&::before {
			content: "- "
		}	
	}
}
</style>
