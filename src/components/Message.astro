---
interface Props {
	text: string
	author: string
}

const {text, author} = Astro.props
---


<div class="message">
	<p class="message-text">{text}</p>
	<strong class="message-author">{author}</strong>
</div>


<style lang="scss">
.message {
	display: flex;
	flex-flow: column;
	place-content: start;
	gap: 1.5rem;
	padding: 0.85rem 1rem 0.95rem;
	background: var(--clr-gray-300);
	border: 2px solid var(--clr-gray-700);


	&-text {
		line-height: 1.5;
	}

	&-author {
		place-self: end;
		font-weight: 700;
		font-size: var(--step-1);
		margin-left: auto;
		&::before {
			content: "- "
		}	
	}
}
</style>
